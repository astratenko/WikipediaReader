<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Choose article language" />

    <RadioGroup
        android:id="@+id/langRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:checkedButton="@+id/englishCheckbox">

        <RadioButton
            android:theme="@style/LanguageButtonStyle"
            android:id="@+id/englishCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="English" />

        <RadioButton
            android:theme="@style/LanguageButtonStyle"
            android:id="@+id/russianCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Russian" />

        <RadioButton
            android:theme="@style/LanguageButtonStyle"
            android:id="@+id/latvianCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latvian" />
    </RadioGroup>

</RelativeLayout>